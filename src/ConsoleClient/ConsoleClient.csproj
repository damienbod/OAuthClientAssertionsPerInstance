    <ItemGroup>
      <PackageReference Include="Duende.IdentityModel" Version="7.0.0" />
      <PackageReference Include="Duende.AccessTokenManagement.OpenIdConnect" Version="3.0.1" />
    </ItemGroup>

    <ItemGroup>
      <None Update="rsa256-private.pem">
